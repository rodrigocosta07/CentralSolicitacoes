@model IEnumerable<SistemaEstoque.Models.Solicitacao>

@{
    ViewBag.Title = "Index";
}

<h2>Index  @ViewBag.quantidade</h2>


@if (ViewBag.ErroQuantidade != null)
{
    <p>@ViewBag.quantidade</p>
}
<p>
    @Html.ActionLink("Create New", "Create")
   
</p>
<div class="text-center text-warning">

</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Equipamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataSolicitacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Setor)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Equipamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataSolicitacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Setor.Nome)
            </td>
            <td>


                <a href="/Solicitacoes/Aprovar/@item.SolicitacaoId">Aprovar</a> |
                <a href="/Solicitacoes/NegarSolicitacao/@item.SolicitacaoId">Negar</a> |
                @Html.ActionLink("Edit", "Edit", new { id = item.SolicitacaoId }) |
                @Html.ActionLink("Details", "Details", new { id = item.SolicitacaoId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.SolicitacaoId })
            </td>
        </tr>
    }

</table>

<div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
        <img src="..." class="rounded mr-2" alt="...">
        <strong class="mr-auto">Status Solicitacao</strong>
        <small class="text-muted">11 mins ago</small>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="toast-body">
        <p> @ViewBag.quantidade </p>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('.toast').toast('hide')
            if (@ViewBag.quantidade != null)
            {
                $('.toast').toast('show')

            }
        })
    </script>
    


}


